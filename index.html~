<!doctype html>
<html>
  <head>
    <script type="text/javascript" src="js/d3.min.js"></script>
    <style type="text/css">
      #graph {text-align: right;}
      #graph div {
        background: #1e1e3f;
        margin-top: 1px;
        height:2px;
      }
      #graph div:hover {
        background: #4e4e6f;
      }
    </style>
  </head>
  <body>
    <h1>d3.js examples</h1>
    <div id="graph">
    <script type="text/javascript">
      var data = [2,5,6,9,3,5,8,3,8,5,8,2,9,8,5,8,6,1];
      d3.select("#graph").selectAll("div").data(data).enter().append("div")
        .style("width", function(d) { return d * 20 + "px";});
</script>
  </body>
</html>
